general {
    colors 		= true
    interval 	= 5
}

order += "tztime local"
order += "volume master"
order += "wireless _first_"
order += "ethernet _first_"

tztime local {
    format = "⏰ %H:%M:%S"
}

wireless _first_ {
    format_up	= "🛜 %ip"
	format_down = ""
}

ethernet _first_ {
    format_up	= "🛜 %ip"
	format_down = ""
}


volume master {
	format		= "🔊 %volume"
	format_muted= "🔇 muted (%volume)"
	device		= "default"
	mixer		= "Master"
	mixer_idx	= 0
}